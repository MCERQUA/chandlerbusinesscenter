---
const { businessName } = Astro.props;
---

<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary hover:text-secondary transition-colors">
          {businessName}
        </a>
      </div>
      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-gray-700 hover:text-primary transition-colors font-medium">Home</a>
        <a href="/contact" class="text-gray-700 hover:text-primary transition-colors font-medium">Contact</a>
      </nav>
      <div class="md:hidden">
        <button type="button" class="text-gray-700 hover:text-primary">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</header>
