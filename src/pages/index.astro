---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// These will be replaced by the build script
const businessName = 'Chandler Business Center ';
const phone = '844-967-5247';
const email = 'josh@joshcotner.com';
const heroHeading = 'Professional Insulation Removal Services';
const heroSubheading = 'Serving Arizona with Expert Insulation Solutions';
const heroCta = 'Get Free Quote';
const pageTitle = 'Chandler Business Center  | Professional Insulation Removal in Arizona';
const pageDescription = 'Expert insulation removal and installation services across Arizona. Licensed, insured, and experienced contractors.';
const pageKeywords = 'insulation removal, arizona insulation, insulation contractor';
const servicesCards = `
          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-primary mb-4">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Insulation Removal</h3>
            <p class="text-gray-600">Safe and complete removal of old insulation</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-primary mb-4">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Spray Foam Installation</h3>
            <p class="text-gray-600">Professional spray foam insulation installation</p>
          </div>

          <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="text-primary mb-4">
              <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Attic Insulation</h3>
            <p class="text-gray-600">Complete attic insulation services</p>
          </div>`;
---

<BaseLayout title={pageTitle} description={pageDescription} keywords={pageKeywords}>
  <Header businessName={businessName} />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-primary to-secondary text-white py-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">{heroHeading}</h1>
        <p class="text-xl md:text-2xl mb-8 text-blue-100">{heroSubheading}</p>
        <a
          href="/contact"
          class="inline-block bg-white text-primary px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors shadow-lg"
        >
          {heroCta}
        </a>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Our Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8" set:html={servicesCards}></div>
      </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="py-20 bg-primary text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl mb-8 text-blue-100">Contact us today for a free quote</p>
        <a
          href="/contact"
          class="inline-block bg-white text-primary px-8 py-4 rounded-lg font-semibold text-lg hover:bg-gray-100 transition-colors shadow-lg"
        >
          Get Free Quote
        </a>
      </div>
    </section>
  </main>

  <Footer businessName={businessName} phone={phone} email={email} />
</BaseLayout>
